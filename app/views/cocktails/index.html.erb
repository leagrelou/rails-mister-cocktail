<div class="container cocktails-container">
  <div class="page-title"><h1>My favourite cocktails</h1></div>
    <div class="card-grid">
      <% @cocktails.each do |cocktail| %>
        <div class="card-cocktail" style="background-image: url('https://source.unsplash.com/random')">
          <div class="title-cocktail"><%= cocktail.name %></div>
          <div class="link-cocktail"><%= link_to "+", cocktail_path(cocktail) %></div>
        </div>
      <% end %>
    </div>
  <p><%= link_to "I want to add a new cocktail!", new_cocktail_path %></p>
</div>
